      { label: 'New Releases', href: '#' },
      { label: 'Top Rated', href: '#' },
      { label: 'Classics', href: '#' }
    ]
  },
  {
    title: 'Community',
    links: [
      { label: 'Leaderboards', href: '#' },
      { label: 'Forums', href: '#' },
      { label: 'Events', href: '#' },
      { label: 'Support', href: '#' }
    ]
  },
  {
    title: 'Company',
    links: [
      { label: 'About Us', href: '#about' },
      { label: 'Careers', href: '#' },
      { label: 'Press', href: '#' },
      { label: 'Contact', href: '#contact' }
    ]
  },
  {
    title: 'Legal',
    links: [
      { label: 'Privacy', href: '#' },
      { label: 'Terms', href: '#' },
      { label: 'Cookies', href: '#' },
      { label: 'DMCA', href: '#' }
    ]
  }
];

const socialLinks = [
  { name: 'Twitter', icon: 'ùïè', href: '#' },
  { name: 'Discord', icon: 'üí¨', href: '#' },
  { name: 'GitHub', icon: '‚åò', href: '#' },
  { name: 'YouTube', icon: '‚ñ∂', href: '#' }

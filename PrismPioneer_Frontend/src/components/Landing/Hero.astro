---
import PixelButton from './PixelButton.astro';
import PixelSprite from './PixelSprite.astro';
---

<section class="hero pixel-scanline">
  <div class="hero-background"></div>
  <div class="hero-particles"></div>
  
  <div class="hero-decoration-sprites">
    <div class="sprite-1">
      <PixelSprite type="ghost" color="#FF0000" size={64} animation="float" />
    </div>
    <div class="sprite-2">
      <PixelSprite type="alien" color="#00FF00" size={64} animation="bounce" />
    </div>
    <div class="sprite-3">
      <PixelSprite type="ship" color="#00FFFF" size={64} animation="float" />
    </div>
  </div>

  <div class="container">
    <div class="hero-content">
      <div class="hero-coin pixel-pulse">
        <span class="coin-icon"></span>
      </div>
      
      <h1 class="hero-title">
        <span class="title-line-1">WELCOME TO</span>
        <span class="title-line-2 rainbow-text neon-glow">PRISM PIONEER</span>
      </h1>
      
      <p class="hero-subtitle">
        Dive into a world of 8-bit adventure and retro gaming magic!
      </p>
      
      <div class="hero-buttons">
        <PixelButton href="#games" variant="rainbow" size="lg">
          START GAME
        </PixelButton>
        <PixelButton href="#features" variant="outline" size="lg">
          EXPLORE
        </PixelButton>
      </div>

      <div class="hero-stats">
        <div class="stat-item">
          <span class="stat-value pixel-shake">100+</span>
          <span class="stat-label">GAMES</span>
        </div>
        <div class="stat-divider"></div>
        <div class="stat-item">
          <span class="stat-value pixel-shake">50K+</span>
          <span class="stat-label">PLAYERS</span>
        </div>
        <div class="stat-divider"></div>
        <div class="stat-item">
          <span class="stat-value pixel-shake">8-BIT</span>
          <span class="stat-label">NOSTALGIA</span>
        </div>
      </div>

      <div class="hero-gamepad">
        <div class="gamepad-body">
          <div class="gamepad-screen pixel-grid">
            <div class="screen-content flicker">
              <span class="screen-text">INSERT COIN</span>
            </div>
          </div>
          <div class="gamepad-controls">
            <div class="d-pad">
              <div class="d-pad-btn d-up"></div>
              <div class="d-pad-btn d-down"></div>
              <div class="d-pad-btn d-left"></div>
              <div class="d-pad-btn d-right"></div>
            </div>
            <div class="action-buttons">
              <div class="action-btn a-btn">A</div>
              <div class="action-btn b-btn">B</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="hero-scroll-indicator">
    <span class="scroll-text">SCROLL DOWN</span>
    <div class="scroll-arrow"></div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    overflow: hidden;
    background: #0a0a15;
  }

  .hero-background {
    position: absolute;
    inset: 0;
    background: 
      radial-gradient(ellipse at 20% 50%, rgba(255, 0, 0, 0.15) 0%, transparent 50%),
      radial-gradient(ellipse at 80% 50%, rgba(0, 0, 255, 0.15) 0%, transparent 50%),
      radial-gradient(ellipse at 50% 100%, rgba(255, 0, 255, 0.1) 0%, transparent 50%);
    animation: heroPulse 8s ease-in-out infinite;
  }

  .hero-decoration-sprites {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 0;
  }

  .hero-decoration-sprites > div {
    position: absolute;
    opacity: 0.4;
    filter: blur(1px);
    display: none;
  }

  @media (min-width: 1024px) {
    .hero-decoration-sprites > div {
      display: block;
    }
  }

  .sprite-1 {
    top: 15%;
    left: 10%;
    animation: spriteFloat1 10s ease-in-out infinite;
  }

  .sprite-2 {
    top: 20%;
    right: 15%;
    animation: spriteFloat2 12s ease-in-out infinite;
  }

  .sprite-3 {
    bottom: 20%;
    left: 15%;
    animation: spriteFloat3 15s ease-in-out infinite;
  }

  @keyframes spriteFloat1 {
    0%, 100% { transform: translate(0, 0); }
    50% { transform: translate(20px, -30px); }
  }

  @keyframes spriteFloat2 {
    0%, 100% { transform: translate(0, 0); }
    50% { transform: translate(-30px, 20px); }
  }

  @keyframes spriteFloat3 {
    0%, 100% { transform: translate(0, 0); }
    50% { transform: translate(40px, 40px); }
  }

  @keyframes heroPulse {
    0%, 100% { opacity: 0.5; }
    50% { opacity: 1; }
  }

  .hero-particles {
    position: absolute;
    inset: 0;
    background-image: 
      radial-gradient(circle, rgba(255, 255, 255, 0.1) 1px, transparent 1px),
      radial-gradient(circle, rgba(255, 215, 0, 0.1) 1px, transparent 1px);
    background-size: 40px 40px, 60px 60px;
    background-position: 0 0, 20px 20px;
    animation: particlesFloat 20s linear infinite;
  }

  @keyframes particlesFloat {
    0% { transform: translateY(0) translateX(0); }
    100% { transform: translateY(-100px) translateX(20px); }
  }

  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    padding: 60px 0;
  }

  .hero-coin {
    width: 80px;
    height: 80px;
    margin: 0 auto 32px;
    background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
    border: 4px solid #B8860B;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 
      0 0 20px rgba(255, 215, 0, 0.5),
      inset 0 0 10px rgba(255, 255, 255, 0.3);
    animation: coinSpin 2s linear infinite;
  }

  @keyframes coinSpin {
    0% { transform: rotateY(0deg); }
    100% { transform: rotateY(360deg); }
  }

  .coin-icon {
    font-family: 'Press Start 2P', cursive;
    font-size: 32px;
    color: #B8860B;
    text-shadow: 1px 1px 0 #FFD700;
  }

  .hero-title {
    font-family: 'Press Start 2P', cursive;
    margin-bottom: 24px;
  }

  .title-line-1 {
    display: block;
    font-size: 24px;
    color: #CCCCCC;
    margin-bottom: 16px;
    letter-spacing: 4px;
    animation: glitchText 3s infinite;
  }

  @keyframes glitchText {
    0%, 90%, 100% { transform: translateX(0); }
    91% { transform: translateX(-2px); }
    92% { transform: translateX(2px); }
    93% { transform: translateX(0); }
  }

  .title-line-2 {
    display: block;
    font-size: clamp(32px, 6vw, 64px);
    font-weight: bold;
    line-height: 1.2;
  }

  .rainbow-text {
    background: linear-gradient(
      90deg,
      #FF0000,
      #FF7F00,
      #FFFF00,
      #00FF00,
      #0000FF,
      #4B0082,
      #9400D3
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: rainbowShift 3s linear infinite;
    background-size: 400% 400%;
  }

  @keyframes rainbowShift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .neon-glow {
    text-shadow: 
      0 0 10px #FF0000,
      0 0 20px #FF7F00,
      0 0 30px #FFFF00,
      0 0 40px #00FF00;
  }

  .hero-subtitle {
    font-family: 'Press Start 2P', cursive;
    font-size: 14px;
    color: #FFFFFF;
    max-width: 600px;
    margin: 0 auto 40px;
    line-height: 2;
    opacity: 0.9;
  }

  .hero-buttons {
    display: flex;
    gap: 16px;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 60px;
  }

  .hero-stats {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 24px;
    margin-bottom: 60px;
    flex-wrap: wrap;
  }

  .stat-item {
    text-align: center;
  }

  .stat-value {
    display: block;
    font-family: 'Press Start 2P', cursive;
    font-size: 24px;
    color: #FFD700;
    text-shadow: 2px 2px 0 #FF6600;
  }

  .stat-label {
    display: block;
    font-family: 'Press Start 2P', cursive;
    font-size: 10px;
    color: #CCCCCC;
    margin-top: 8px;
    letter-spacing: 2px;
  }

  .stat-divider {
    width: 2px;
    height: 40px;
    background: linear-gradient(180deg, transparent, #FFD700, transparent);
  }

  .hero-gamepad {
    display: none;
    max-width: 400px;
    margin: 0 auto;
  }

  @media (min-width: 1024px) {
    .hero-gamepad {
      display: block;
    }
  }

  .gamepad-body {
    background: linear-gradient(180deg, #2a2a3e 0%, #1a1a2e 100%);
    border: 8px solid #4a4a5e;
    border-radius: 16px;
    padding: 24px;
    box-shadow: 
      0 8px 0 #0a0a15,
      0 16px 32px rgba(0, 0, 0, 0.5),
      inset 0 0 20px rgba(255, 255, 255, 0.05);
  }

  .gamepad-screen {
    background: #000;
    border: 4px solid #333;
    border-radius: 8px;
    height: 120px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 24px;
    position: relative;
    overflow: hidden;
  }

  .screen-content {
    color: #00FF00;
    font-family: 'Press Start 2P', cursive;
    font-size: 16px;
    text-shadow: 0 0 10px #00FF00;
    animation: textBlink 1s step-end infinite;
  }

  @keyframes textBlink {
    0%, 49% { opacity: 1; }
    50%, 100% { opacity: 0; }
  }

  .gamepad-controls {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .d-pad {
    position: relative;
    width: 80px;
    height: 80px;
  }

  .d-pad-btn {
    position: absolute;
    background: #333;
    border: 2px solid #555;
    cursor: pointer;
    transition: all 0.1s ease;
  }

  .d-pad-btn:hover {
    background: #444;
    transform: scale(1.05);
  }

  .d-pad-btn:active {
    background: #555;
    transform: scale(0.95);
  }

  .d-up {
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 24px;
    height: 24px;
  }

  .d-down {
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 24px;
    height: 24px;
  }

  .d-left {
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 24px;
    height: 24px;
  }

  .d-right {
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 24px;
    height: 24px;
  }

  .action-buttons {
    display: flex;
    gap: 16px;
  }

  .action-btn {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    border: 4px solid #555;
    font-family: 'Press Start 2P', cursive;
    font-size: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.1s ease;
  }

  .a-btn {
    background: #e74c3c;
    color: #fff;
  }

  .b-btn {
    background: #3498db;
    color: #fff;
  }

  .action-btn:hover {
    transform: scale(1.1);
    box-shadow: 0 0 20px currentColor;
  }

  .action-btn:active {
    transform: scale(0.9);
  }

  .hero-scroll-indicator {
    position: absolute;
    bottom: 32px;
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
    animation: scrollBounce 2s ease-in-out infinite;
  }

  @keyframes scrollBounce {
    0%, 100% { transform: translateX(-50%) translateY(0); }
    50% { transform: translateX(-50%) translateY(10px); }
  }

  .scroll-text {
    display: block;
    font-family: 'Press Start 2P', cursive;
    font-size: 10px;
    color: #CCCCCC;
    margin-bottom: 8px;
    letter-spacing: 2px;
  }

  .scroll-arrow {
    width: 0;
    height: 0;
    border-left: 8px solid transparent;
    border-right: 8px solid transparent;
    border-top: 12px solid #FFD700;
    margin: 0 auto;
  }

  @media (max-width: 768px) {
    .hero-content {
      padding: 40px 0;
    }

    .hero-title {
      margin-bottom: 16px;
    }

    .title-line-1 {
      font-size: 16px;
    }

    .hero-subtitle {
      font-size: 12px;
    }

    .hero-buttons {
      flex-direction: column;
      align-items: center;
    }

    .hero-stats {
      gap: 16px;
    }

    .stat-value {
      font-size: 18px;
    }

    .stat-label {
      font-size: 8px;
    }
  }

  @media (max-width: 480px) {
    .hero-coin {
      width: 60px;
      height: 60px;
    }

    .coin-icon {
      font-size: 24px;
    }
  }
</style>

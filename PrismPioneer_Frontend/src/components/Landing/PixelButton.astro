---
interface Props {
  href?: string;
  variant?: 'primary' | 'secondary' | 'rainbow' | 'outline';
  size?: 'sm' | 'md' | 'lg';
  children: string;
  icon?: string;
  client:load?: boolean;
}

const { href = '#', variant = 'primary', size = 'md', children, icon } = Astro.props;

const sizeClasses = {
  sm: 'px-4 py-2 text-xs',
  md: 'px-6 py-3 text-sm',
  lg: 'px-8 py-4 text-base'
};

const variantClasses = {
  primary: 'bg-blue-600 text-white hover:bg-blue-700 border-white',
  secondary: 'bg-purple-600 text-white hover:bg-purple-700 border-white',
  rainbow: 'rainbow-border text-white',
  outline: 'bg-transparent border-white text-white hover:bg-white/10'
};
---

<a href={href} class={`pixel-button pixel-font ${sizeClasses[size]} ${variantClasses[variant]} ${icon ? 'flex items-center gap-2' : ''}`}>
  {icon && <span class="pixel-button-icon">{icon}</span>}
  <span>{children}</span>
</a>

<style>
  .pixel-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border: 4px solid;
    font-weight: bold;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 1px;
    cursor: pointer;
    position: relative;
    background: #333;
    transition: all 0.1s ease;
    box-shadow: 
      4px 4px 0 #000,
      inset 0 0 0 2px rgba(255, 255, 255, 0.1);
  }

  .pixel-button:hover {
    transform: translate(-2px, -2px);
    box-shadow: 
      6px 6px 0 #000,
      inset 0 0 0 2px rgba(255, 255, 255, 0.2);
  }

  .pixel-button:active {
    transform: translate(2px, 2px);
    box-shadow: 
      2px 2px 0 #000,
      inset 0 0 0 2px rgba(0, 0, 0, 0.3);
  }

  .pixel-button:focus {
    outline: none;
    box-shadow: 
      6px 6px 0 #000,
      0 0 0 4px #FFD700;
  }

  .pixel-button-icon {
    font-size: 1.2em;
    animation: pixelBounce 0.5s ease infinite;
  }

  @keyframes pixelBounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-3px); }
  }

  @media (max-width: 320px) {
    .pixel-button {
      font-size: 10px;
      padding: 12px 16px;
    }
  }
</style>

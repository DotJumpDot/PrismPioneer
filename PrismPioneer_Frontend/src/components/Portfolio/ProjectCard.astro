---
import type { Project } from '@/data/projects';

interface Props {
  project: Project;
  index: number;
}

const { project, index } = Astro.props;
const { id, title, description, description_th, category, date, featured, color, icon, techStack } = project;
const currentPath = Astro.url.pathname;
const lang = currentPath.split('/')[1] || 'en';
const displayDescription = (lang === 'th' && description_th) ? description_th : description;
---

<a href={`/${lang}/projects/${id}`} class="project-card scroll-trigger" data-index={index} style={`--project-color: ${color};`}>
  <div class="card-inner">
    <div class="card-image">
      <div class="image-placeholder" style={`background: linear-gradient(135deg, ${color}22, ${color}44);`}>
        <div class="project-icon">
          <div class="icon-glow"></div>
          <span class="icon-symbol">{icon === 'brain' ? 'üß†' : icon === 'palette' ? 'üé®' : icon === 'code' ? 'üíª' : icon === 'rocket' ? 'üöÄ' : icon === 'database' ? 'üóÑÔ∏è' : 'üì±'}</span>
        </div>
      </div>
      {featured && (
        <div class="featured-badge">
          <span class="badge-text">FEATURED</span>
        </div>
      )}
      <div class="category-tag" style={`background: ${color}33; color: ${color};`}>
        {category}
      </div>
    </div>
    
    <div class="card-content">
      <div class="card-meta">
        <span class="date">{new Date(date).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}</span>
        {featured && <span class="featured-dot" style={`background: ${color};`}></span>}
      </div>
      
      <h3 class="card-title">{title}</h3>
      
      <p class="card-description">{displayDescription}</p>
      
      <div class="tech-stack">
        {techStack.slice(0, 4).map(tech => (
          <span class="tech-tag" style={`border-color: ${color}44;`}>{tech}</span>
        ))}
        {techStack.length > 4 && (
          <span class="tech-tag more">+{techStack.length - 4}</span>
        )}
      </div>
      
      <div class="card-footer">
        <span class="view-project">
          <span>View Project</span>
          <svg class="arrow-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </span>
      </div>
    </div>
    
    <div class="card-border"></div>
    <div class="card-glow"></div>
  </div>
</a>

<style>
  .project-card {
    position: relative;
    display: block;
    text-decoration: none;
    color: inherit;
    opacity: 0;
    transform: translateY(60px);
    transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .project-card.animate-in {
    opacity: 1;
    transform: translateY(0);
  }

  .card-inner {
    position: relative;
    background: linear-gradient(145deg, #1a1a2e 0%, #0f0f1a 100%);
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .project-card:hover .card-inner {
    transform: translateY(-8px);
    box-shadow: 
      0 20px 60px rgba(0, 0, 0, 0.4),
      0 0 40px var(--project-color);
  }

  .project-card:hover .card-border {
    opacity: 1;
  }

  .project-card:hover .card-glow {
    opacity: 0.3;
  }

  .project-card:hover .arrow-icon {
    transform: translateX(4px);
  }

  .card-image {
    position: relative;
    width: 100%;
    aspect-ratio: 16/9;
    overflow: hidden;
  }

  .image-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.4s ease;
  }

  .project-card:hover .image-placeholder {
    transform: scale(1.05);
  }

  .project-icon {
    position: relative;
    font-size: 64px;
    z-index: 1;
  }

  .icon-glow {
    position: absolute;
    inset: -20px;
    background: radial-gradient(circle, var(--project-color)66, transparent 70%);
    opacity: 0.5;
    animation: iconPulse 3s ease-in-out infinite;
  }

  @keyframes iconPulse {
    0%, 100% { transform: scale(1); opacity: 0.5; }
    50% { transform: scale(1.2); opacity: 0.8; }
  }

  .featured-badge {
    position: absolute;
    top: 12px;
    right: 12px;
    background: linear-gradient(135deg, var(--project-color), var(--project-color)88);
    padding: 6px 12px;
    border-radius: 20px;
    z-index: 2;
  }

  .badge-text {
    font-family: 'Press Start 2P', cursive;
    font-size: 8px;
    color: #fff;
    letter-spacing: 1px;
  }

  .category-tag {
    position: absolute;
    bottom: 12px;
    left: 12px;
    padding: 6px 12px;
    border-radius: 6px;
    font-family: 'Press Start 2P', cursive;
    font-size: 8px;
    letter-spacing: 1px;
    z-index: 2;
  }

  .card-content {
    padding: 24px;
    background: linear-gradient(180deg, #1a1a2e 0%, #151525 100%);
  }

  .card-meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 12px;
  }

  .date {
    font-family: 'Press Start 2P', cursive;
    font-size: 9px;
    color: #888;
    letter-spacing: 1px;
  }

  .featured-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    animation: dotPulse 2s ease-in-out infinite;
  }

  @keyframes dotPulse {
    0%, 100% { transform: scale(1); opacity: 1; }
    50% { transform: scale(1.3); opacity: 0.7; }
  }

  .card-title {
    font-family: 'Press Start 2P', cursive;
    font-size: 14px;
    color: #fff;
    margin: 0 0 12px;
    line-height: 1.5;
    min-height: 42px;
  }

  .card-description {
    font-size: 13px;
    color: #bbb;
    line-height: 1.6;
    margin: 0 0 16px;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .tech-stack {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-bottom: 20px;
  }

  .tech-tag {
    padding: 6px 12px;
    border: 1px solid;
    border-radius: 6px;
    font-size: 10px;
    color: #999;
    font-family: 'Press Start 2P', cursive;
    letter-spacing: 0.5px;
    transition: all 0.2s ease;
  }

  .project-card:hover .tech-tag {
    background: var(--project-color)22;
    color: #fff;
  }

  .tech-tag.more {
    border: 1px solid #333;
    color: #666;
  }

  .card-footer {
    display: flex;
    align-items: center;
    justify-content: flex-end;
  }

  .view-project {
    display: flex;
    align-items: center;
    gap: 8px;
    font-family: 'Press Start 2P', cursive;
    font-size: 10px;
    color: var(--project-color);
    letter-spacing: 1px;
    transition: color 0.2s ease;
  }

  .project-card:hover .view-project {
    color: #fff;
  }

  .arrow-icon {
    width: 16px;
    height: 16px;
    transition: transform 0.2s ease;
  }

  .card-border {
    position: absolute;
    inset: 0;
    border-radius: 16px;
    border: 2px solid var(--project-color);
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
    z-index: 1;
  }

  .card-glow {
    position: absolute;
    inset: -2px;
    border-radius: 18px;
    background: var(--project-color);
    opacity: 0;
    filter: blur(20px);
    transition: opacity 0.4s ease;
    pointer-events: none;
    z-index: -1;
  }

  @media (max-width: 768px) {
    .card-content {
      padding: 20px;
    }

    .card-title {
      font-size: 12px;
      min-height: 36px;
    }

    .card-description {
      font-size: 12px;
      -webkit-line-clamp: 3;
    }

    .tech-tag {
      font-size: 9px;
      padding: 5px 10px;
    }

    .project-icon {
      font-size: 48px;
    }
  }

  @media (max-width: 480px) {
    .card-content {
      padding: 16px;
    }

    .card-title {
      font-size: 11px;
    }

    .view-project {
      font-size: 9px;
    }
  }
</style>

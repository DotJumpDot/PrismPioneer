---
import ProjectCard from './ProjectCard.astro';
import { getRecentProjects } from '@/data/projects';
import RainbowDivider from '../Landing/RainbowDivider.astro';

const projects = getRecentProjects(6);
---

<section id="projects" class="project-gallery pixel-scanline">
  <div class="gallery-background"></div>
  <div class="container">
    <div class="gallery-header">
      <div class="header-decoration">
        <span class="deco-line"></span>
        <span class="deco-dot"></span>
        <span class="deco-line"></span>
      </div>
      
      <h2 class="gallery-title">
        <span class="title-prefix">FEATURED</span>
        <span class="title-main rainbow-text">PROJECTS</span>
      </h2>
      
      <p class="gallery-subtitle">
        A collection of innovative projects showcasing expertise in AI, web development, and tool creation. Each project represents a unique challenge solved with creative solutions.
      </p>
      
      <div class="header-decoration">
        <span class="deco-line"></span>
        <span class="deco-dot"></span>
        <span class="deco-line"></span>
      </div>
    </div>

    <div class="projects-grid">
      {projects.map((project, index) => (
        <ProjectCard project={project} index={index} />
      ))}
    </div>

    <div class="gallery-footer">
      <a href="/news" class="view-all-btn">
        <span class="btn-text">View All Projects</span>
        <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </a>
      <div class="footer-decoration">
        <div class="deco-circle"></div>
        <div class="deco-circle"></div>
        <div class="deco-circle"></div>
      </div>
    </div>
  </div>
</section>

<style>
  .project-gallery {
    position: relative;
    padding: 120px 0;
    background: #0d0d18;
    overflow: hidden;
  }

  .gallery-background {
    position: absolute;
    inset: 0;
    background: 
      repeating-linear-gradient(
        0deg,
        transparent,
        transparent 2px,
        rgba(255, 255, 255, 0.015) 2px,
        rgba(255, 255, 255, 0.015) 4px
      );
    pointer-events: none;
  }

  .gallery-header {
    text-align: center;
    margin-bottom: 80px;
    position: relative;
  }

  .header-decoration {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    margin-bottom: 24px;
  }

  .deco-line {
    width: 60px;
    height: 2px;
    background: linear-gradient(90deg, transparent, #9400D3, transparent);
  }

  .deco-dot {
    width: 8px;
    height: 8px;
    background: #9400D3;
    border-radius: 50%;
    animation: dotPulse 2s ease-in-out infinite;
  }

  @keyframes dotPulse {
    0%, 100% { transform: scale(1); opacity: 1; }
    50% { transform: scale(1.3); opacity: 0.7; }
  }

  .gallery-title {
    font-family: 'Press Start 2P', cursive;
    margin-bottom: 24px;
  }

  .title-prefix {
    display: block;
    font-size: 12px;
    color: #666;
    letter-spacing: 4px;
    margin-bottom: 12px;
  }

  .title-main {
    display: block;
    font-size: clamp(32px, 5vw, 48px);
    font-weight: bold;
    line-height: 1.2;
  }

  .rainbow-text {
    background: linear-gradient(
      90deg,
      #FF0000,
      #FF7F00,
      #FFFF00,
      #00FF00,
      #0000FF,
      #4B0082,
      #9400D3
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: rainbowShift 4s linear infinite;
    background-size: 400% 400%;
  }

  @keyframes rainbowShift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .gallery-subtitle {
    font-size: clamp(13px, 2vw, 15px);
    color: #999;
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.8;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 48px;
    margin-bottom: 80px;
  }

  @media (min-width: 768px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 56px;
    }
  }

  @media (min-width: 1024px) {
    .projects-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 64px;
    }
  }

  .gallery-footer {
    text-align: center;
    position: relative;
  }

  .view-all-btn {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    padding: 16px 40px;
    background: linear-gradient(135deg, #9400D3, #6B21A8);
    border: 2px solid #9400D3;
    border-radius: 12px;
    color: #fff;
    text-decoration: none;
    font-family: 'Press Start 2P', cursive;
    font-size: 12px;
    letter-spacing: 1px;
    transition: all 0.3s ease;
  }

  .view-all-btn:hover {
    transform: translateY(-3px);
    box-shadow: 
      0 10px 30px rgba(148, 0, 211, 0.4),
      0 0 40px rgba(148, 0, 211, 0.2);
  }

  .btn-text {
    transition: transform 0.2s ease;
  }

  .view-all-btn:hover .btn-text {
    transform: translateX(-4px);
  }

  .btn-icon {
    width: 20px;
    height: 20px;
    transition: transform 0.2s ease;
  }

  .view-all-btn:hover .btn-icon {
    transform: translateX(4px);
  }

  .footer-decoration {
    display: flex;
    justify-content: center;
    gap: 16px;
    margin-top: 48px;
  }

  .deco-circle {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: linear-gradient(135deg, #9400D3, #6B21A8);
    animation: circlePulse 2s ease-in-out infinite;
  }

  .deco-circle:nth-child(1) { animation-delay: 0s; }
  .deco-circle:nth-child(2) { animation-delay: 0.3s; }
  .deco-circle:nth-child(3) { animation-delay: 0.6s; }

  @keyframes circlePulse {
    0%, 100% { transform: scale(1); opacity: 0.5; }
    50% { transform: scale(1.5); opacity: 1; }
  }

  @media (max-width: 768px) {
    .project-gallery {
      padding: 80px 0;
    }

    .gallery-header {
      margin-bottom: 60px;
    }

    .deco-line {
      width: 40px;
    }

    .gallery-subtitle {
      font-size: 12px;
    }

    .projects-grid {
      gap: 40px;
    }

    .view-all-btn {
      width: 100%;
      max-width: 300px;
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .project-gallery {
      padding: 60px 0;
    }

    .gallery-title {
      margin-bottom: 16px;
    }

    .title-prefix {
      font-size: 10px;
      letter-spacing: 2px;
    }

    .header-decoration {
      gap: 8px;
      margin-bottom: 16px;
    }

    .deco-line {
      width: 30px;
    }
  }
</style>

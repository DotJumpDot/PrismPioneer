---
import { projects } from '@/data/projects';

interface TechCategory {
  category: string;
  technologies: Array<{ name: string; color: string; count: number }>;
}

const LANGUAGE_COLORS: Record<string, string> = {
  TypeScript: '#007ACC',
  JavaScript: '#F7DF1E',
  HTML: '#E34F26',
  CSS: '#1572B6',
  Python: '#3776AB',
  Java: '#007396',
  Svelte: '#FF3E00',
  Vue: '#4FC08D',
  Quasar: '#1976D2',
  React: '#61DAFB',
  'Mantine UI': '#339AF0',
  'Ant Design': '#1890FF',
  Vuetify: '#1867C0',
  ElysiaJS: '#FF3E00',
  NestJS: '#E0234E',
  FastAPI: '#05998B',
  PostgreSQL: '#336791',
  MySQL: '#4479A1',
  SQLite: '#003B57',
  MongoDB: '#47A248',
  Supabase: '#3ECF8D',
  JWT: '#000000',
  Bcrypt: '#E10098',
  'API Key': '#FF6B6B',
  CORS: '#009688',
  WebSocket: '#F7DF1E',
  Swagger: '#85EA2D',
  i18n: '#E10098',
  'Framer Motion': '#FF0080',
  Zustand: '#20A7C1',
  'Tailwind CSS': '#38B2AC',
  Turbo: '#000000',
  'VS Code API': '#007ACC',
  'Node.js': '#339933',
  Yarn: '#2C8EBB',
  Bun: '#FBF0DF',
  Astro: '#FF5D01',
  'simpleGame.js': '#E34F26',
  'PNG sprites': '#E34F26',
  'MP3 audio': '#F7DF1E',
  'Puzzle games': '#FFA500',
  Netlify: '#00C7B7',
  Railway: '#8A2BE2',
  Atlas: '#00ED64'
};

const CATEGORY_MAPPING: Record<string, string> = {
  Svelte: 'Frontend',
  'Svelte 5': 'Frontend',
  Vue: 'Frontend',
  Quasar: 'Frontend',
  TypeScript: 'Languages',
  JavaScript: 'Languages',
  HTML: 'Languages',
  HTML5: 'Languages',
  CSS: 'Languages',
  Python: 'Languages',
  Java: 'Languages',
  'Next.js': 'Frontend',
  'Next.js 16': 'Frontend',
  React: 'Frontend',
  'React 19': 'Frontend',
  'Mantine UI': 'UI Frameworks',
  'Ant Design': 'UI Frameworks',
  Vuetify: 'UI Frameworks',
  'Tailwind CSS': 'Frontend',
  'Tailwind CSS 4': 'Frontend',
  Astro: 'Frontend',
  'Astro 5': 'Frontend',
  ElysiaJS: 'Backend',
  NestJS: 'Backend',
  FastAPI: 'Backend',
  PostgreSQL: 'Database',
  MySQL: 'Database',
  SQLite: 'Database',
  MongoDB: 'Database',
  Supabase: 'Database',
  JWT: 'Authentication',
  Bcrypt: 'Authentication',
  'API Key': 'Authentication',
  CORS: 'Authentication',
  WebSocket: 'Misc Library',
  Swagger: 'Misc Library',
  i18n: 'Misc Library',
  'Framer Motion': 'Misc Library',
  Zustand: 'Misc Library',
  Turbo: 'Misc Library',
  'VS Code API': 'Misc Library',
  'Node.js': 'Runtime',
  Yarn: 'Runtime',
  Bun: 'Runtime',
  simpleGame: 'Misc Library',
  'simpleGame.js': 'Misc Library',
  'PNG sprites': 'Misc Library',
  'MP3 audio': 'Misc Library',
  'Puzzle games': 'Misc Library',
  Netlify: 'Deploy',
  Railway: 'Deploy',
  Atlas: 'Deploy'
};

const normalizeTechName = (tech: string): string => {
  const versionPatterns = [
    { pattern: /Svelte 5/, replacement: 'Svelte' },
    { pattern: /Next\.js 16/, replacement: 'Next.js' },
    { pattern: /Next\.js/, replacement: 'Next.js' },
    { pattern: /React 19/, replacement: 'React' },
    { pattern: /Tailwind CSS 4/, replacement: 'Tailwind CSS' },
    { pattern: /HTML5/, replacement: 'HTML' },
    { pattern: /Astro 5/, replacement: 'Astro' },
    { pattern: /Astro/, replacement: 'Astro' }
  ];

  let normalized = tech;
  for (const { pattern, replacement } of versionPatterns) {
    if (pattern.test(normalized)) {
      normalized = replacement;
      break;
    }
  }
  return normalized;
};

const techCount: Record<string, number> = {};

projects.forEach(project => {
  project.techStack.forEach(tech => {
    const normalizedTech = normalizeTechName(tech);
    techCount[normalizedTech] = (techCount[normalizedTech] || 0) + 1;
  });
  if (project.deploy) {
    if (project.deploy.frontend) {
      techCount[project.deploy.frontend] = (techCount[project.deploy.frontend] || 0) + 1;
    }
    if (project.deploy.backend) {
      techCount[project.deploy.backend] = (techCount[project.deploy.backend] || 0) + 1;
    }
    if (project.deploy.database) {
      techCount[project.deploy.database] = (techCount[project.deploy.database] || 0) + 1;
    }
  }
});

const categoriesMap: Record<string, Record<string, number>> = {};

Object.entries(techCount).forEach(([tech, count]) => {
  const category = CATEGORY_MAPPING[tech] || 'Misc Library';
  if (!categoriesMap[category]) {
    categoriesMap[category] = {};
  }
  categoriesMap[category][tech] = count;
});

const techCategories: TechCategory[] = Object.entries(categoriesMap).map(([category, techs]) => ({
  category,
  technologies: Object.entries(techs)
    .map(([name, count]) => ({
      name,
      color: LANGUAGE_COLORS[name] || '#888888',
      count
    }))
    .sort((a, b) => b.count - a.count)
})).sort((a, b) => {
  const order = ['Languages', 'Frontend', 'Backend', 'Database', 'Authentication', 'UI Frameworks', 'Runtime', 'Deploy', 'Misc Library'];
  return order.indexOf(a.category) - order.indexOf(b.category);
});

const isWideCategory = (category: string): boolean => {
  return category === 'Misc Library';
};

const getGridSpan = (category: string): string => {
  if (category === 'Misc Library') return '1 / -1';
  return 'span 1';
};
---

<section id="tech-stack" class="tech-stack pixel-scanline">
  <div class="tech-background"></div>
  <div class="container">
    <div class="tech-header">
      <div class="header-decoration">
        <span class="deco-line"></span>
        <span class="deco-dot"></span>
        <span class="deco-line"></span>
      </div>
      
      <h2 class="tech-title">
        <span class="title-main neon-glow">TECH STACK</span>
      </h2>
      
      <p class="tech-subtitle">
        Technologies and tools compiled from actual project experience
      </p>
      
      <div class="header-decoration">
        <span class="deco-line"></span>
        <span class="deco-dot"></span>
        <span class="deco-line"></span>
      </div>
    </div>

    {techCategories.length > 0 ? (
      <div class="tech-container">
        {techCategories.map((category, catIndex) => (
          <div class={`tech-category ${category.category === 'Misc Library' ? 'wide-category' : ''}`} style={`animation-delay: ${catIndex * 0.15}s; grid-column: ${getGridSpan(category.category)}`}>
            <h3 class="category-title">
              <span class="category-icon"></span>
              {category.category}
            </h3>
            
            <div class={`tech-grid ${category.category === 'Misc Library' ? 'wide-grid' : ''}`}>
              {category.technologies.map((tech, techIndex) => (
                <div class="tech-item" style={`animation-delay: ${catIndex * 0.15 + techIndex * 0.05}s`}>
                  <span class="tech-dot" style={`background: ${tech.color}; box-shadow: 0 0 8px ${tech.color}`}></span>
                  <span class="tech-name">{tech.name}</span>
                  <span class="tech-count">{tech.count}</span>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    ) : (
      <div class="error-message">
        <span class="error-icon">⚠️</span>
        <p>Unable to load tech stack data. Please check back later.</p>
      </div>
    )}
  </div>
</section>

<style>
  .tech-stack {
    position: relative;
    padding: 100px 0;
    background: #0a0a15;
    overflow: hidden;
  }

  .tech-background {
    position: absolute;
    inset: 0;
    background: 
      radial-gradient(ellipse at 30% 20%, rgba(255, 0, 128, 0.08) 0%, transparent 50%),
      radial-gradient(ellipse at 70% 80%, rgba(0, 191, 255, 0.08) 0%, transparent 50%);
    pointer-events: none;
  }

  .tech-header {
    text-align: center;
    margin-bottom: 80px;
    position: relative;
  }

  .header-decoration {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    margin-bottom: 24px;
  }

  .deco-line {
    width: 60px;
    height: 2px;
    background: linear-gradient(90deg, transparent, #9400D3, transparent);
  }

  .deco-dot {
    width: 8px;
    height: 8px;
    background: #9400D3;
    border-radius: 50%;
    animation: dotPulse 2s ease-in-out infinite;
  }

  @keyframes dotPulse {
    0%, 100% { transform: scale(1); opacity: 1; }
    50% { transform: scale(1.3); opacity: 0.7; }
  }

  .tech-title {
    font-family: 'Press Start 2P', cursive;
    margin-bottom: 24px;
  }

  .title-main {
    display: block;
    font-size: clamp(28px, 4vw, 42px);
    font-weight: bold;
    line-height: 1.2;
    color: #fff;
    text-shadow: 
      0 0 10px #9400D3,
      0 0 20px #9400D3,
      0 0 30px #9400D3;
  }

  @keyframes neonGlow {
    0%, 100% { 
      text-shadow: 
        0 0 10px #9400D3,
        0 0 20px #9400D3,
        0 0 30px #9400D3;
    }
    50% { 
      text-shadow: 
        0 0 20px #9400D3,
        0 0 40px #9400D3,
        0 0 60px #9400D3;
    }
  }

  .tech-subtitle {
    font-size: clamp(13px, 2vw, 15px);
    color: #999;
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.8;
  }

  .tech-container {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 48px;
  }

  @media (min-width: 768px) {
    .tech-container {
      gap: 56px;
    }
  }

  @media (min-width: 1200px) {
    .tech-container {
      grid-template-columns: repeat(4, 1fr);
      gap: 64px;
    }
  }

  .tech-category {
    background: #151525;
    border: 1px solid #2a2a3e;
    border-radius: 16px;
    padding: 32px;
    animation: categoryFadeIn 0.6s ease-out forwards;
    opacity: 0;
  }

  @keyframes categoryFadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .tech-category:hover {
    border-color: #9400D3;
    box-shadow: 0 8px 24px rgba(148, 0, 211, 0.15);
  }

  .category-title {
    font-family: 'Press Start 2P', cursive;
    font-size: 14px;
    color: #fff;
    margin-bottom: 24px;
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .category-icon {
    width: 12px;
    height: 12px;
    background: #9400D3;
    border-radius: 50%;
    flex-shrink: 0;
    box-shadow: 0 0 10px #9400D3;
  }

  .tech-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 12px;
  }

  .tech-grid.wide-grid {
    grid-template-columns: repeat(2, 1fr);
  }

  @media (min-width: 1024px) {
    .tech-grid.wide-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .tech-item {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 14px 16px;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 8px;
    transition: all 0.2s ease;
    animation: techItemFadeIn 0.4s ease-out forwards;
    opacity: 0;
  }

  @keyframes techItemFadeIn {
    from {
      opacity: 0;
      transform: translateX(-10px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .tech-item:hover {
    background: rgba(148, 0, 211, 0.1);
    border-color: rgba(148, 0, 211, 0.3);
    transform: translateX(4px);
  }

  .tech-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    flex-shrink: 0;
  }

  .tech-name {
    font-family: 'Press Start 2P', cursive;
    font-size: 10px;
    color: #ccc;
    flex: 1;
  }

  .tech-count {
    font-family: 'Press Start 2P', cursive;
    font-size: 9px;
    color: #666;
    min-width: 20px;
    text-align: center;
  }

  .error-message {
    text-align: center;
    padding: 60px 20px;
    color: #888;
  }

  .error-icon {
    display: block;
    font-size: 48px;
    margin-bottom: 16px;
  }

  .error-message p {
    font-size: 14px;
  }

  @media (max-width: 768px) {
    .tech-stack {
      padding: 60px 0;
    }

    .tech-header {
      margin-bottom: 48px;
    }

    .deco-line {
      width: 40px;
    }

    .tech-subtitle {
      font-size: 12px;
    }

    .tech-container {
      grid-template-columns: repeat(2, 1fr);
      gap: 32px;
    }

    .tech-category {
      padding: 24px;
    }

    .tech-grid {
      gap: 8px;
    }

    .tech-item {
      padding: 12px;
    }
  }

  @media (max-width: 480px) {
    .tech-title {
      margin-bottom: 16px;
    }

    .header-decoration {
      gap: 8px;
      margin-bottom: 16px;
    }

    .deco-line {
      width: 30px;
    }

    .tech-container {
      grid-template-columns: 1fr;
    }

    .category-title {
      font-size: 12px;
    }

    .tech-name {
      font-size: 9px;
    }
  }
</style>

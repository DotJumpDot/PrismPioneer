---
import Layout from '@/layouts/Landing.astro';
import { projects } from '@/data/projects';
import type { Project } from '@/data/projects';
import RainbowDivider from '@/components/Landing/RainbowDivider.astro';

export async function getStaticPaths() {
  const paths: { params: { lang: string; id: string }; props: { project: Project } }[] = [];
  ['en', 'th'].forEach((lang) => {
    projects.forEach((project) => {
      paths.push({
        params: { lang, id: project.id },
        props: { project }
      });
    });
  });
  return paths;
}

interface Props {
  project: Project;
}

const { project } = Astro.props;
const { lang } = Astro.params;
import { getTranslations } from '@/utils/i18n';
import type { Language } from '@/utils/i18n';
const t = getTranslations(lang as Language);
const { 
  title, 
  description, 
  category, 
  date, 
  color, 
  techStack, 
  longDescription, 
  longDescription_th,
  implementation, 
  implementation_th,
  outcomes, 
  outcomes_th,
  githubUrl, 
  liveUrl, 
  images 
} = project;

const isThai = lang === 'th';
const displayLongDescription = (isThai && longDescription_th) ? longDescription_th : longDescription;
const displayImplementation = (isThai && implementation_th) ? implementation_th : implementation;
const displayOutcomes = (isThai && outcomes_th) ? outcomes_th : outcomes;
---

<Layout title={title} description={description}>
  <article class="project-detail pixel-scanline">
    <div class="project-hero" style={`--project-color: ${color};`}>
      <div class="hero-background"></div>
      <div class="container">
        <div class="hero-content">
          <a href={`/${lang}/project`} class="back-link">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M19 12H5M12 19l-7-7 7-7"/>
            </svg>
            <span>Back to Projects</span>
          </a>
          
          <div class="project-category" style={`color: ${color};`}>{category}</div>
          <h1 class="project-title">{title}</h1>
          <div class="project-date">{new Date(date).toLocaleDateString(lang === 'th' ? 'th-TH' : 'en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</div>
          
          <div class="project-links">
            {githubUrl && (
              <a href={githubUrl} target="_blank" rel="noopener noreferrer" class="link-btn github">
                <svg viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
                </svg>
                <span>GitHub</span>
              </a>
            )}
            {liveUrl && (
              <a href={liveUrl} target="_blank" rel="noopener noreferrer" class="link-btn live">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6M15 3h6v6M10 14L21 3"/>
                </svg>
                <span>Live Demo</span>
              </a>
            )}
          </div>
        </div>
      </div>
    </div>

    <RainbowDivider height={4} />

    <div class="project-content">
      <div class="container">
        <div class="content-grid">
          <div class="main-content">
            <section class="content-section">
              <h2 class="section-title">{t.projectDetail.overview}</h2>
              <p class="long-description">{displayLongDescription}</p>
            </section>

            <section class="content-section">
              <h2 class="section-title">{t.projectDetail.implementation}</h2>
              <ul class="detail-list">
                {displayImplementation.map((item: string) => (
                  <li class="detail-item">
                    <span class="bullet" style={`background: ${color};`}></span>
                    <p>{item}</p>
                  </li>
                ))}
              </ul>
            </section>

            <section class="content-section">
              <h2 class="section-title">{t.projectDetail.outcomes}</h2>
              <ul class="detail-list">
                {displayOutcomes.map((item: string) => (
                  <li class="detail-item">
                    <span class="bullet" style={`background: ${color};`}></span>
                    <p>{item}</p>
                  </li>
                ))}
              </ul>
            </section>
          </div>

          <aside class="side-content">
            <div class="side-card tech-card">
              <h3 class="side-title">{t.projectDetail.techStack}</h3>
              <div class="tech-tags">
                {techStack.map((tech: string) => (
                  <span class="tech-tag" style={`border-color: ${color}44;`}>{tech}</span>
                ))}
              </div>
            </div>

            <div class="side-card gallery-card">
              <h3 class="side-title">{t.projectDetail.gallery}</h3>
              <div class="gallery-grid">
                {images.map((image: string) => (
                  <div class="gallery-item">
                    <div class="image-placeholder" style={`background: linear-gradient(135deg, ${color}11, ${color}22);`}>
                      <span class="img-text">{t.projectDetail.screenshot}</span>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          </aside>
        </div>
      </div>
    </div>
  </article>
</Layout>

<style>
  .project-detail {
    background: #0a0a15;
    min-height: 100vh;
  }

  .project-hero {
    position: relative;
    padding: 120px 0 80px;
    background: linear-gradient(180deg, #1a1a2e 0%, #0a0a15 100%);
    overflow: hidden;
  }

  .hero-background {
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 50% 50%, var(--project-color)15, transparent 70%);
    opacity: 0.6;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: #888;
    text-decoration: none;
    font-family: 'Press Start 2P', cursive;
    font-size: 10px;
    margin-bottom: 40px;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--project-color);
  }

  .back-link svg {
    width: 16px;
    height: 16px;
  }

  .project-category {
    font-family: 'Press Start 2P', cursive;
    font-size: 12px;
    letter-spacing: 2px;
    margin-bottom: 16px;
    text-transform: uppercase;
  }

  .project-title {
    font-family: 'Press Start 2P', cursive;
    font-size: clamp(32px, 5vw, 56px);
    color: #fff;
    margin-bottom: 24px;
    line-height: 1.2;
    text-shadow: 0 0 20px var(--project-color)44;
  }

  .project-date {
    font-family: 'Press Start 2P', cursive;
    font-size: 10px;
    color: #666;
    margin-bottom: 40px;
    letter-spacing: 1px;
  }

  .project-links {
    display: flex;
    justify-content: center;
    gap: 16px;
    flex-wrap: wrap;
  }

  .link-btn {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 14px 28px;
    border-radius: 8px;
    text-decoration: none;
    font-family: 'Press Start 2P', cursive;
    font-size: 11px;
    transition: all 0.3s ease;
  }

  .link-btn.github {
    background: #24292e;
    color: #fff;
  }

  .link-btn.live {
    background: var(--project-color);
    color: #fff;
  }

  .link-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
  }

  .link-btn svg {
    width: 18px;
    height: 18px;
  }

  .project-content {
    padding: 80px 0;
  }

  .content-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 60px;
  }

  @media (min-width: 1024px) {
    .content-grid {
      grid-template-columns: 2fr 1fr;
    }
  }

  .content-section {
    margin-bottom: 60px;
  }

  .section-title {
    font-family: 'Press Start 2P', cursive;
    font-size: 18px;
    color: #fff;
    margin-bottom: 32px;
    padding-left: 16px;
    border-left: 4px solid var(--project-color);
  }

  .long-description {
    font-size: 16px;
    color: #ccc;
    line-height: 1.8;
    white-space: pre-line;
  }

  .detail-list {
    list-style: none;
    padding: 0;
  }

  .detail-item {
    display: flex;
    gap: 16px;
    margin-bottom: 24px;
    align-items: flex-start;
  }

  .bullet {
    width: 8px;
    height: 8px;
    border-radius: 2px;
    margin-top: 8px;
    flex-shrink: 0;
  }

  .detail-item p {
    font-size: 15px;
    color: #bbb;
    line-height: 1.6;
    margin: 0;
  }

  .side-card {
    background: #151525;
    border: 1px solid #2a2a3e;
    border-radius: 12px;
    padding: 32px;
    margin-bottom: 32px;
  }

  .side-title {
    font-family: 'Press Start 2P', cursive;
    font-size: 14px;
    color: #fff;
    margin-bottom: 24px;
    letter-spacing: 1px;
  }

  .tech-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
  }

  .tech-tag {
    padding: 8px 14px;
    border: 1px solid;
    border-radius: 6px;
    font-family: 'Press Start 2P', cursive;
    font-size: 9px;
    color: #888;
    transition: all 0.2s ease;
  }

  .tech-tag:hover {
    color: #fff;
    background: var(--project-color)22;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 16px;
  }

  .gallery-item {
    border-radius: 8px;
    overflow: hidden;
    aspect-ratio: 16/9;
  }

  .image-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px dashed #333;
  }

  .img-text {
    font-family: 'Press Start 2P', cursive;
    font-size: 8px;
    color: #444;
  }

  @media (max-width: 768px) {
    .project-hero {
      padding: 100px 0 60px;
    }

    .project-title {
      font-size: 24px;
    }

    .link-btn {
      width: 100%;
      justify-content: center;
    }

    .section-title {
      font-size: 16px;
    }

    .long-description {
      font-size: 14px;
    }
  }
</style>
